<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.smartbj.fragment.HomeFragment">

    <com.example.administrator.smartbj.ui.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabStrip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/color_yellow"
        app:pstsShouldExpand="true"
        app:pstsIndicatorColor="@color/color_white"
        app:pstsDividerColor="@color/color_yellow"
        app:pstsIndicatorHeight="2dp"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsUnderlineColor="@color/material_yellow"
        app:pstsUnderlineHeight="2dp"
        app:selectedTabTextColor="@color/color_white"
        app:tabTextSize="14sp"
        app:mtabTextColor="@color/color_white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabStrip" />

</RelativeLayout>
